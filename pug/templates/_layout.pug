mjml
    //- Head
    mj-head
        mj-title Newsletter Restaurant Mjml
        mj-raw.
            <meta name="color-scheme" content="light"/>
            <meta name="supported-color-schemes" content="light"/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-font( name="Norican" href="https://fonts.googleapis.com/css2?family=Norican&display=swap")
        mj-attributes
            mj-all(font-family='Arial, Helvetica, sans-serif' font-weight='300' font-size='16px' line-height='120%' color='#626262')/
            mj-image(border='none')/
        mj-breakpoint(width='480px')
        mj-style.
            @media (max-width:480px){
                .al, .al div{
                    text-align: center !important;
                }
            }
    //- Body
    mj-body(background-color="#eeeeee")       
        //- content
        block content
        //- Header
        block Header
            include ../includes/_header
        //- Carte Exp√©rientiel
        block Carte Experientiel
            include ../includes/_cExperientiel
        //- Menu Ardoise
        block mArdoise
            include ../includes/_mArdoise
        //- Carte Pouce
        block cPouce
            include ../includes/_cPouce
        //- footer
        block footer
            include ../includes/_footer